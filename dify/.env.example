# Dify stack env (official compose-based)

# Enable required profile services
COMPOSE_PROFILES=postgresql,weaviate
DB_TYPE=postgresql
VECTOR_STORE=weaviate

# Public domain/port mapping (must match gateway)
BASE_DOMAIN=pve.example.com
DIFY_HTTPS_PORT=43053

# External URLs used by Dify frontend/backend
CONSOLE_API_URL=https://pve.example.com:43053/console/api
CONSOLE_WEB_URL=https://pve.example.com:43053
SERVICE_API_URL=https://pve.example.com:43053/api
APP_API_URL=https://pve.example.com:43053/api
APP_WEB_URL=https://pve.example.com:43053
FILES_URL=https://pve.example.com:43053/files

# Security
SECRET_KEY=please-change-me-to-a-long-random-string
INIT_PASSWORD=

# Local bind ports (host only)
EXPOSE_NGINX_PORT=127.0.0.1:43080
EXPOSE_NGINX_SSL_PORT=127.0.0.1:43443
EXPOSE_PLUGIN_DEBUGGING_PORT=127.0.0.1:45003
CERTBOT_EMAIL=
CERTBOT_DOMAIN=

# Shared external docker network (must match gateway)
ARK_NETWORK=arkos-net
